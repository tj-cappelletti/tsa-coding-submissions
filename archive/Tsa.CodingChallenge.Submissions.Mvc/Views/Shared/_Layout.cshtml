<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tsa.CodingChallenge.Submissions.Mvc</title>

    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header>
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
            <h5 class="my-0 mr-md-auto font-weight-normal">TSA High School Coding Challenge</h5>
            <nav class="my-2 my-md-0 mr-md-3">
                <a class="p-2 text-dark" asp-controller="Home" asp-action="Index">Home</a>
                <a class="p-2 text-dark" asp-controller="Home" asp-action="Rules">Rules</a>
                <partial name="_AuthenticatedLinksPartial" />
            </nav>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Webstorm Technologies</p>
        </div>
    </footer>

    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
