{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "0.0.1.0",
    "parameters": {
        "branch": {
            "type": "string"
        },
        "databaseEdition": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ]
        },
        "databasePerformanceLevel": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P4",
                "P6",
                "P11",
                "P15",
                "PRS1",
                "PRS2",
                "PRS4",
                "PRS6"
            ]
        },
        "sha": {
            "type": "string"
        },
        "webMvcPerformanceLevel": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ]
        }
    },
    "variables": {
        "appServicePlanName": "TSA-Coding-Submissions-AppServicePlan",
        "databaseName": "[concat('CodingChallenge-Submissions-', variables('version'))]",
        "webMvcConnectionStringName": "SubmissionsEntitiesContext",
        "shortSha": "[substring(parameters('sha'), 0, 7)]",
        "sqlAdminLogin": "sqlAdmin",
        "sqlAdminPassword": "21&jlYOwCM1B",
        "sqlServerName": "[concat('tsa-sqlserver-', variables('version'))]",
        "version": "[concat(parameters('branch'), '-', variables('shortSha'))]",
        "webMvcName": "TSA-Coding-Submissions-WebMvc"
    },
    "resources": [
        {
            "name": "[variables('sqlServerName')]",
            "type": "Microsoft.Sql/servers",
            "kind": "v12.0",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-04-01-preview",
            "properties": {
                "administratorLogin": "[variables('sqlAdminLogin')]",
                "administratorLoginPassword": "[variables('sqlAdminPassword')]"
            },
            "resources": [
                {
                    "name": "[variables('databaseName')]",
                    "type": "databases",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/', variables('sqlserverName'))]"
                    ],
                    "properties": {
                        "edition": "[parameters('databaseEdition')]",
                        "collation": "SQL_Latin1_General_CP1_CI_AS",
                        "requestedServiceObjectiveName": "[parameters('databasePerformanceLevel')]"
                    }
                },
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
                    "kind": "v12.0",
                    "apiVersion": "2014-04-01-preview",
                    "location": "[resourceGroup().location]",
                    "scale": null,
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
                    ]
                }
            ]
        },
        {
            "name": "[variables('appServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "sku": {
                "name": "[parameters('webMvcPerformanceLevel')]"
            },
            "dependsOn": [],
            "tags": {
                "displayName": "[concat('PointOfSales ', variables('version') ,' App Service Plan')]"
            },
            "properties": {
                "name": "[variables('appServicePlanName')]",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[variables('webMvcName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
            ],
            "tags": {
                "displayName": "[concat('PointOfSales ', variables('version') ,' Web API')]"
            },
            "properties": {
                "name": "[variables('webMvcName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "[variables('webMvcConnectionStringName')]",
                            "connectionString": "[concat('Server=tcp:',reference(variables('sqlServerName')).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('databaseName'),';Persist Security Info=False;User ID=', variables('sqlAdminLogin'),';Password=', variables('sqlAdminPassword'), ';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
                            "type": 2
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "AppServicePlanName": {
            "type": "string",
            "value": "[variables('appServicePlanName')]"
        },
        "DatabaseName": {
            "type": "string",
            "value": "[variables('databaseName')]"
        },
        "SqlServerFqdn": {
            "type": "string",
            "value": "[reference(variables('sqlServerName')).fullyQualifiedDomainName]"
        },
        "SqlServerLogin": {
            "type": "string",
            "value": "[variables('sqlAdminLogin')]"
        },
        "SqlServerPassword": {
            "type": "string",
            "value": "[variables('sqlAdminPassword')]"
        },
        "WebApiName": {
            "type": "string",
            "value": "[variables('webMvcName')]"
        }
    }
}